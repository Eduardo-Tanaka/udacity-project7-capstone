<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.eduardotanaka.knowdown.Exercicio1Activity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="40"
        android:background="@drawable/shape_red_white"
        android:textColor="@android:color/holo_red_dark"
        android:width="60dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:id="@+id/txtPontos1"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_pontos"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:textColor="@color/yellow"
        android:textSize="16sp"
        android:id="@+id/lblPontos1"
        android:maxLines="1"
        android:layout_marginTop="24dp"
        android:layout_alignLeft="@id/txtPontos1"
        android:layout_alignStart="@id/txtPontos1" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_below="@id/lblPontos1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/margin_conteudo"
        android:layout_marginRight="@dimen/margin_conteudo"
        android:layout_marginTop="@dimen/margin_top_conteudo"
        android:layout_marginBottom="50dp"
        android:background="@drawable/shape_content"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/titulo_pergunta"
            android:textStyle="bold"
            tools:text=""
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:id="@+id/txtExercicio1" />

        <Button
            android:layout_width="@dimen/resposta1width"
            android:layout_height="@dimen/resposta1height"
            tools:text="OPT1"
            android:background="@drawable/shape_pergunta"
            android:textSize="16sp"
            android:id="@+id/btnEx1Opcao1"
            android:layout_below="@id/txtExercicio1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/exercicio1_top_margin_alternativas" />

        <Button
            android:layout_width="@dimen/resposta1width"
            android:layout_height="@dimen/resposta1height"
            tools:text="OPT2"
            android:background="@drawable/shape_pergunta"
            android:textSize="16sp"
            android:id="@+id/btnEx1Opcao2"
            android:layout_below="@id/btnEx1Opcao1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/exercicio1_top_margin_alternativas" />

        <Button
            android:layout_width="@dimen/resposta1width"
            android:layout_height="@dimen/resposta1height"
            tools:text="OPT3"
            android:textSize="16sp"
            android:background="@drawable/shape_pergunta"
            android:id="@+id/btnEx1Opcao3"
            android:layout_below="@id/btnEx1Opcao2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/exercicio1_top_margin_alternativas" />

        <Button
            android:layout_width="@dimen/resposta1width"
            android:layout_height="@dimen/resposta1height"
            tools:text="OPT4"
            android:background="@drawable/shape_pergunta"
            android:textSize="16sp"
            android:id="@+id/btnEx1Opcao4"
            android:layout_below="@id/btnEx1Opcao3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/exercicio1_top_margin_alternativas" />

        <Button
            android:layout_width="@dimen/resposta1width"
            android:layout_height="@dimen/resposta1height"
            tools:text="OPT5"
            android:background="@drawable/shape_pergunta"
            android:textSize="16sp"
            android:id="@+id/btnEx1Opcao5"
            android:layout_below="@id/btnEx1Opcao4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/exercicio1_top_margin_alternativas" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verificar"
            android:id="@+id/btnVerificar1"
            android:textSize="16sp"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:textColor="@color/yellow"
            android:background="@drawable/shape_timer"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:visibility="invisible"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/txtAvatar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_avatar"
        android:textColor="@color/yellow"
        android:shadowColor="@color/black"
        android:shadowDx="15"
        android:shadowDy="15"
        android:shadowRadius="15"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="29dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/yellow"
        android:id="@+id/imgAvatar1"
        android:background="@drawable/shape_red_white"
        android:layout_above="@id/txtAvatar1"
        android:layout_marginLeft="25dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/avatares"
            android:id="@+id/imgEx1Avatar"/>

    </LinearLayout>

</RelativeLayout>
