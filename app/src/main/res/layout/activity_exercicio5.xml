<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.eduardotanaka.knowdown.Exercicio5Activity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="40"
        android:background="@drawable/shape_red_white"
        android:textColor="@android:color/holo_red_dark"
        android:width="@dimen/score_width"
        android:textAlignment="center"
        android:textSize="@dimen/score_text_size"
        android:id="@+id/txtPontos5"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/score_margin"
        android:layout_marginEnd="@dimen/score_margin"
        android:layout_marginTop="@dimen/score_margin_top"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_pontos"
        android:shadowColor="#000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:textColor="@color/yellow"
        android:textSize="@dimen/score_text_size"
        android:id="@+id/lblPontos5"
        android:maxLines="1"
        android:layout_marginTop="24dp"
        android:layout_alignLeft="@id/txtPontos5"
        android:layout_alignStart="@id/txtPontos5" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/content_height"
        android:layout_below="@+id/lblPontos5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/margin_conteudo"
        android:layout_marginRight="@dimen/margin_conteudo"
        android:layout_marginTop="@dimen/margin_top_conteudo"
        android:layout_marginBottom="@dimen/content_margin_bottom"
        android:background="@drawable/shape_content"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/titulo_pergunta"
            android:textStyle="bold"
            android:text="@string/exercicio5"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="15dp"
            android:id="@+id/txtExercicio5"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="@dimen/exercicio5width"
            android:layout_height="@dimen/exercicio5height"
            android:background="@drawable/shape_exercicio5"
            android:layout_below="@id/txtExercicio5"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="40dp"
            android:id="@+id/edtConteudo5"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="26sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtConteudo5"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/shape_pergunta"
                android:id="@+id/btnEx5Opcao1"
                android:layout_below="@id/edtConteudo5"
                android:clickable="true"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/shape_pergunta"
                android:id="@+id/btnEx5Opcao2"
                android:clickable="true"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/shape_pergunta"
                android:id="@+id/btnEx5Opcao3"
                android:clickable="true"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:background="@drawable/shape_pergunta"
                android:id="@+id/btnEx5Opcao4"
                android:clickable="true"
                android:textSize="16sp"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verificar"
            android:id="@+id/btnVerificar5"
            android:textSize="16sp"
            android:shadowColor="@color/black"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:textColor="@color/yellow"
            android:background="@drawable/shape_timer"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:visibility="invisible"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/txtAvatar5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_avatar"
        android:textColor="@color/yellow"
        android:shadowColor="@color/black"
        android:shadowDx="15"
        android:shadowDy="15"
        android:shadowRadius="15"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text=""
        android:textSize="20sp"
        android:textColor="@color/yellow"
        android:id="@+id/imgAvatar5"
        android:background="@drawable/shape_red_white"
        android:layout_above="@id/txtAvatar5"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp">

        <ImageView
            android:contentDescription="@string/cd_img_avatars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/avatares"
            android:id="@+id/imgEx5Avatar"/>

    </LinearLayout>

</RelativeLayout>
