<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.eduardotanaka.knowdown.RegisterActivity"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:textSize="@dimen/activities_title_size"
                android:shadowColor="#000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:textColor="@android:color/white"
                android:background="@drawable/shape_timer"
                android:layout_marginTop="@dimen/register_title_margin"
                android:layout_marginBottom="@dimen/register_title_margin"
                android:layout_marginLeft="@dimen/margin_conteudo"
                android:layout_marginRight="@dimen/margin_conteudo"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_conteudo"
                android:layout_marginRight="@dimen/margin_conteudo"
                android:background="@drawable/shape_content"
                android:paddingBottom="@dimen/register_title_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user"
                    android:layout_marginLeft="@dimen/register_margin_left"
                    android:layout_marginStart="@dimen/register_margin_left"
                    android:layout_marginTop="@dimen/register_text_view_margin_top"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/edtRegisterUserName"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/register_margin_left"
                    android:layout_marginStart="@dimen/register_margin_left"
                    android:layout_marginTop="@dimen/register_margin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:layout_marginLeft="@dimen/register_margin_left"
                    android:layout_marginStart="@dimen/register_margin_left"
                    android:layout_marginTop="@dimen/register_text_view_margin_top"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/edtRegisterEmail"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/register_margin_left"
                    android:layout_marginStart="@dimen/register_margin_left"
                    android:layout_marginTop="@dimen/register_margin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    android:layout_marginLeft="@dimen/register_margin_left"
                    android:layout_marginStart="@dimen/register_margin_left"
                    android:layout_marginTop="@dimen/register_text_view_margin_top"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/edtPassword"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/register_margin_left"
                    android:layout_marginStart="@dimen/register_margin_left"
                    android:layout_marginTop="@dimen/register_margin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password_confirm"
                    android:layout_marginLeft="@dimen/register_margin_left"
                    android:layout_marginStart="@dimen/register_margin_left"
                    android:layout_marginTop="@dimen/register_text_view_margin_top"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/edtPassword2"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/register_margin_left"
                    android:layout_marginStart="@dimen/register_margin_left"
                    android:layout_marginTop="@dimen/register_margin"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/choose_avatar"
                    android:layout_marginLeft="@dimen/register_margin_left"
                    android:layout_marginStart="@dimen/register_margin_left"
                    android:layout_marginTop="@dimen/register_text_view_margin_top"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:contentDescription="@string/cd_img_girl"
                        android:layout_width="@dimen/register_image_size"
                        android:layout_height="@dimen/register_image_size"
                        android:id="@+id/imgGirl"
                        android:src="@drawable/girl"
                        android:layout_marginTop="@dimen/register_image_margin"
                        android:clickable="true"/>

                    <ImageView
                        android:contentDescription="@string/cd_img_boy"
                        android:layout_width="@dimen/register_image_size"
                        android:layout_height="@dimen/register_image_size"
                        android:id="@+id/imgBoy"
                        android:src="@drawable/boy"
                        android:layout_marginTop="@dimen/register_image_margin"
                        android:layout_marginLeft="@dimen/register_image_margin_offset"
                        android:layout_marginStart="@dimen/register_image_margin_offset"
                        android:clickable="true"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height"
                android:text="@string/register"
                android:textSize="@dimen/activities_title_size"
                android:id="@+id/btnRegister"
                android:shadowColor="#000"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="5"
                android:textColor="@color/yellow"
                android:background="@drawable/shape_timer"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/baseProgressBar1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical">

        <!-- progress -->
        <ProgressBar
            android:id="@+id/sign_up_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"/>
    </LinearLayout>

</RelativeLayout>